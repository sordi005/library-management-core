<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="libraryPU" transaction-type="RESOURCE_LOCAL">
        <!-- 📌 Clases JPA (solo ejemplos; agregá todas tus entidades reales) -->
        <class>com.libraryManagement.model.User</class>
        <class>com.libraryManagement.model.Book</class>
        <class>com.libraryManagement.model.Copy</class>
        <class>com.libraryManagement.model.Loan</class>
        <class>com.libraryManagement.model.LoanLine</class>
        <class>com.libraryManagement.model.Publication</class>
        <class>com.libraryManagement.model.Magazine</class>
        <class>com.libraryManagement.model.Author</class>
        <class>com.libraryManagement.model.Publisher</class>
        <class>com.libraryManagement.model.Genre</class>
        <class>com.libraryManagement.model.Address</class>
        <class>com.libraryManagement.model.Base</class>

        <!-- Configuración JDBC para MySQL -->
        <properties>
            <!-- CONEXIÓN CON CREACIÓN AUTOMÁTICA DE BD -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <!-- URL MODIFICADA: allowPublicKeyRetrieval + createDatabaseIfNotExist -->
            <property name="jakarta.persistence.jdbc.url"
                value="jdbc:mysql://localhost:3306/librarydb?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true&amp;createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>

            <!--  PROVEEDOR Y DIALECTO -->
            <property name="jakarta.persistence.provider" value="org.hibernate.jpa.HibernatePersistenceProvider"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <!--  DDL AUTOMÁTICO - CREA TABLAS SI NO EXISTEN -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!--  LOGGING Y DEBUG -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

            <!-- OPTIMIZACIONES -->
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.current_session_context_class" value="thread"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
        </properties>
    </persistence-unit>
</persistence>